<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mob3.Views.GeneratePage">
    <ContentPage.Content>
        <StackLayout x:Name="stackL" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Input your text here"/>
            <Entry x:Name="qrText"/>
            <Button Text="Generate" Clicked="GenerateQrCode"/>
            <Image x:Name="qrImage"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>